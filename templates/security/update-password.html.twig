{% extends 'base.html.twig' %}
{% block title %}Demande de modification du mot de passe{% endblock %}
{% form_theme form 'security/_form-renderer.html.twig' %}
{% block content %}
    <section class="default">
        <div class="default-title">
            <h2>Email requis pour modifier votre mot de passe</h2>
        </div>
        <div class="default-form">
            {{ form_start(form)}}
            {{ form_row(form.email)}}
            <button type="submit" class="mt-2 btn-round-shadow btn btn-success">
                Envoyer
                <span class="fas fa-share-square"></span>
            </button>
            {{ form_end(form)}}
        </div>
    </section>
{% endblock %}
